<div class="container-fluid">
  <div class="row d-flex justify-content-center m-3 p-5">
    <div class="col col-md-auto p-5">
      <h1><u>Cocktails</u></h1>
      <p><%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %></p>
      <% @cocktails.each do |cocktail| %>
          <p><%= link_to cocktail.name, cocktail_path(cocktail) %> | <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_cocktail"></i></p>
          <% end %>
          <% end %>
        <div class="dropdown-divider"></div>
        <p><%= link_to "Add a cocktail", new_cocktail_path, class: 'btn btn-info' %></p>
    </div>
  </div>
</div>
