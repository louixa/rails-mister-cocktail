<div class="container-fluid">
  <div class="row d-flex justify-content-center m-3 p-5">
    <div class="col col-md-auto p-5">
      <h1><u>Cocktails</u></h1>
            <%= @cocktail.name %>
            <% @cocktail.ingredients.each do |ingredient| %>
            <% @cocktail.doses.each do |dose| %>
              <p><%= dose.ingredient.name %> | <%= dose.description %> | <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i></p>
              <% end %>
              <% end %>
              <% end %>
            <div class="dropdown-divider"></div>
        <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-info' %> | <%= link_to "Home", cocktails_path %></p>
    </div>
  </div>
</div>
